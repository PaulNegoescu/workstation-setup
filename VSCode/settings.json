{
  // this one can be tested for a while, costs 12 bucks after long trial period
  "workbench.colorTheme": "Monokai Pro (Filter Ristretto)",
  // sets various icons for different file types in the file explorer
  "workbench.iconTheme": "material-icon-theme",
  // this moves the sidebar to the right, might need getting used to
  "workbench.sideBar.location": "right",
  // chose a font for the terminal that has Powerline characters (important if using PowerLevel 10K OhMyZsh! theme)
  "terminal.integrated.fontFamily": "MesloLGS NF",
  // tabs on the right side of the terminal to switch terminal windows
  "terminal.integrated.tabs.enabled": true,
  // this sets the default terminal on Windows OS (prefer git bash especially if you use OhMyZsh!)
  "terminal.integrated.defaultProfile.windows": "Git Bash",
  // set the Prettier plugin as the default formatter
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.fontFamily": "'Dank Mono', Consolas, monospace",
  // depends strongly on the font, for Dank Mono it changes === and ==, also other character combos
  "editor.fontLigatures": true,
  // keep snippet suggestions on top to be able to TAB complete them instead of getting text completion (e.g. log for console.log)
  "editor.snippetSuggestions": "top",
  // prevents code completion from words inside the file (irrelevant completions)
  "editor.wordBasedSuggestions": "off",
  // hides the minimap that shows a mini verion of the file
  "editor.minimap.enabled": false,
  // disable auto formatting on save, to be able to show stuff to students
  "editor.formatOnSave": false,
  // enables auto-rename of tag pairs in HTML
  "editor.linkedEditing": true,
  // will select the first suggestion instead of most recently used, not sure if this is actually better or not
  "editor.suggestSelection": "first",
  "editor.tabSize": 2,
  // don't auto-fix eslint issues
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "never"
  },
  // prefer single quotes except in jsx
  "prettier.jsxSingleQuote": false,
  "prettier.singleQuote": true,
  // these two make the line width a bit larger before code formatting kicks in
  "prettier.printWidth": 80,
  "svelte.plugin.svelte.format.config.printWidth": 80,
  // this is important
  "files.eol": "\n",
  // just common convention
  "files.insertFinalNewline": true,
  // will only autosave on unfocus, this reduces the number of HMR triggers, good for performance
  "files.autoSave": "onWindowChange",
  // excludes files that are gitignored from any kind of editor help
  "files.exclude": {
    "USE_GITIGNORE": true
  },
  // prevents search from entering folders where it has nothing to find or would find duplicates
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "**/coverage": true,
    "**/dist": true,
    "**/build": true,
    "**/.gh-pages": true
  },
  // trigger eslint validation in multiple filetypes including react files
  "eslint.validate": [
    "vue",
    "react",
    "typescript",
    "html",
    "javascript",
  ],
  // enables emmet in certain languages (languages can be individually selected for every file in the editor)
  "emmet.includeLanguages": {
    "javascript": "javascriptreact",
    "html": "html",
    "css": "css",
    "postcss": "css",
    "vue-html": "html"
  },
  // preview expanded abbreviations
  "emmet.showExpandedAbbreviation": "always",
  // live server plugin should ignore certain files which it doesn't actually serve
  "liveServer.settings.ignoreFiles": [
    "db.json",
    ".vscode/**",
    "**/*.scss",
    "**/*.sass",
    "**/*.ts"
  ],
  // disables internal live server popup
  "liveServer.settings.donotShowInfoMsg": true,
  // how zoomed in is the editor
  "window.zoomLevel": 0,
  "window.commandCenter": false,
  "files.associations": {
    "*.css": "css"
  },
  // basically behaves in a more old-fashioned way where all folders are visible individually, never grouped with parent
  "explorer.compactFolders": false,
  // language specific overrides, especially if formatter works better than Prettier
  "[svelte]": {
    "editor.defaultFormatter": "svelte.svelte-vscode"
  },
  "[html]": {
    "editor.defaultFormatter": "vscode.html-language-features"
  },
  "liveServer.settings.donotVerifyTags": true,
  "terminal.integrated.fontSize": 16,
  "editor.lineHeight": 0,
  "editor.fontSize": 22,
  "editor.stickyScroll.enabled": false,
  "prisma.showPrismaDataPlatformNotification": false,
  "explorer.confirmDelete": false,
  "reactSnippets.settings.importReactOnTop": false,
  "totalTypeScript.hideAllTips": false,
  "totalTypeScript.hideBasicTips": true
}
